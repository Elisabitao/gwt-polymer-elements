<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:i='urn:import:com.vaadin.polymer.iron.widget'
             xmlns:p='urn:import:com.vaadin.polymer.paper.widget'>

    <g:HTMLPanel addStyleNames="vertical-section centered">
       <style is="custom-style">
          .vertical-section {
            line-height: 40px;
          }
          input[is=iron-input] {
            width: 100%;
          }
          input, button {
            font-size: 20px;
          }
        </style>

        <template ui:field="bindTemplate" is="dom-bind">
          <p>
            <input ui:field="ironInput" is="iron-input" bind-value="{{bindValue}}" value="{{value::input}}" />
            <br />
            bind to <code>bind-value</code>: <b>[[bindValue]]</b>
            <br />
            bind to <code>value::input</code>: <b>{{value}}</b>
          </p>
    
          <p>
            set bind-value to: <input ui:field="input1"/> <button on-click="function1" >set</button>
            <br />
            set value to: <input ui:field="input2"/> <button on-click="function2">set</button>
          </p>
        </template>

        <p>only allows these characters: <code>!@#0123456789</code></p>

        <input is="iron-input" allowed-pattern="[!@#0-9]" prevent-invalid-input="" />

    </g:HTMLPanel>
</ui:UiBinder>
