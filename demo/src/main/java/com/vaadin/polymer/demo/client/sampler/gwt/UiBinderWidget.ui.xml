<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p='urn:import:com.vaadin.polymer.paper.widget'>

    <ui:style>
        .view paper-tabs {
            background-color: #00bcd4;
            color: #fff;
            box-shadow: 0px 3px 2px rgba(0, 0, 0, 0.2);
        }
    </ui:style>

    <g:HTMLPanel addStyleNames="{style.view}">
        <h2>Paper Tabs based on gwt-polymer widgets</h2>

        <p:PaperTabs ui:field="tabs">
            <g:Button ui:field="button1">gwt button 1</g:Button>
            <g:Button ui:field="button2">gwt button 2</g:Button>
            <p:PaperTab>ITEM ONE</p:PaperTab>
            <p:PaperTab>ITEM TWO</p:PaperTab>
            <p:PaperTab>ITEM THREE</p:PaperTab>
        </p:PaperTabs>

        <p:PaperToast ui:field="toast" text="Tabs Widget example loaded."/>
    </g:HTMLPanel>
</ui:UiBinder>
