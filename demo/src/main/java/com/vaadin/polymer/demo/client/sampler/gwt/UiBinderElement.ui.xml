<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .paper-tabs-view paper-tabs {
            background-color: #00bcd4;
            color: #fff;
        }
    </ui:style>

    <div class="{style.paper-tabs-view}">
        <h2>Paper Tabs based on gwt-polymer elements</h2>
        <paper-material elevation="1">
            <paper-tabs ui:field="paperTabs" selected="0">
                <paper-tab>ITEM ONE</paper-tab>
                <paper-tab>ITEM TWO</paper-tab>
                <paper-tab>ITEM THREE</paper-tab>
            </paper-tabs>
        </paper-material>

        <paper-toast ui:field="toast" text="Your draft has been discarded."></paper-toast>
    </div>
</ui:UiBinder>
